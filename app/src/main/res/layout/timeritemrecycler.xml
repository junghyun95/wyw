<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/timericon"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"/>
    <TextView
            android:text="날짜"
            android:layout_width="152dp"
            android:layout_height="19dp"
            android:id="@+id/date"
            android:textColor="@color/wywColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:textSize="15sp" android:layout_marginEnd="172dp"/>
    <TextView
            android:text="랩타임 기록"
            android:layout_width="259dp"
            android:layout_height="28dp"
            android:id="@+id/lapTime"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintTop_toBottomOf="@+id/date"/>
    <Button
            android:text="X"
            android:textColor="@color/wywColor"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:id="@+id/btnDelete"
            android:backgroundTint="@android:color/white"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lapTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"/>
    <TextView
            android:text="no"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:id="@+id/num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="52dp"
            app:layout_constraintEnd_toStartOf="@+id/date" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>