<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainFragment">
    <!--android:background="#EFFDE0">-->

    <ImageView
            android:src="@drawable/weather_logo"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
    />


    <ImageView
            android:src="@drawable/sun"
            android:layout_width="245dp"
            android:layout_height="224dp"
            android:id="@+id/weather_ic"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"/>

    <TextView
            android:id="@+id/weather_tv"
            android:textSize="30sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/weather_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:id="@+id/temperature_tv"
            android:textSize="60sp"
            android:fontFamily="sans-serif-thin"
            android:text=""
            android:textColor="#3B7700"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv"/>
    <TextView
            android:text="산책하기 좋은 날씨네요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherTip_tv"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/temperature_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.506"/>

</androidx.constraintlayout.widget.ConstraintLayout>